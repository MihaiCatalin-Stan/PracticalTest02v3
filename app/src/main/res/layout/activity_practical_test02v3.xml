<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticalTest02v3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/server_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/server"></TextView>
        <EditText
            android:id="@+id/port_edit_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/server_text"
            android:layout_alignParentLeft="true"
            android:text="@string/port"></EditText>
        <Button
            android:id="@+id/conn_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/server_text"
            android:layout_alignParentRight="true"
            android:text="@string/CONNECT"></Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/client_text"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/port_edit_1"
            android:text="@string/client"></TextView>
        <EditText
            android:id="@+id/addr_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/client_text"
            android:layout_alignParentLeft="true"
            android:text="@string/addr"></EditText>
        <EditText
            android:id="@+id/port_edit_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/client_text"
            android:layout_alignParentRight="true"
            android:text="@string/port"></EditText>
        <EditText
            android:id="@+id/word_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addr_edit"
            android:layout_alignParentLeft="true"
            android:text="@string/word"></EditText>

        <Button
            android:id="@+id/get_definition_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/port_edit_2"
            android:layout_alignParentRight="true"
            android:text="@string/get_definition"></Button>

        <TextView
            android:id="@+id/http_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/word_edit"
            android:layout_centerHorizontal="true"></TextView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>